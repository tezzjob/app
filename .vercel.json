{
  "version": 2,
  "builds": [
    {
      "src": "server/api/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build/client" }
    }
  ],
  "rewrites": [{ "source": "server/(.*)", "destination": "/api" }],
  "routes": [{ "src": "/api/(.*)", "dest": "server/api/index.ts" }]
}