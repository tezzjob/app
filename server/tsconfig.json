{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["ESNext"],
    "moduleResolution": "Node",
    "outDir": "../build/server",
    "rootDir": ".",
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "build", "client"]
}
